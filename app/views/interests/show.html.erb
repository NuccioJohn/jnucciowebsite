<div class="row">
    <div class="span6 offset3">
        <div class="well">
        	<%= image_tag @interest.image %>
			<p>
			  <b>Title:</b>
			  <%= @interest.title %>
			</p>
			<p>
			  <b>Description:</b>
			  <%= @interest.description %>
			</p>
			<p>
			  <b>Name:</b>
			  <%= @interest.user.name %>
			</p>
			<% if current_user == @interest.user %>
			<%= link_to 'Edit', edit_interest_path(@interest) %> |
			<% end %>
			<%= link_to 'Back', interests_path %>
        </div>
    </div>
</div>